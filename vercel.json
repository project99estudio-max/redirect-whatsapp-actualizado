{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/puente.html" },
    { "src": "^/puente$", "dest": "/puente.html" },
    { "src": "^/admin$", "dest": "/admin.html" },
    { "src": "^/api/(.*)$", "dest": "/api/$1.js" }
  ]
}
